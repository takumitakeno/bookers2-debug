
<% if @book_comment.errors.any? %>
	<h3><%= @book_comment.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @book_comment.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @booknew%>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<td>
					<% if @book.favorited_by?(current_user) %>
					  <li>
					    <%= link_to book_favorite_path(@book), method: :delete do %>
					      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					      <%= @book.favorites.count %> いいね
					    <% end %>
					  </li>
					<% else %>
					  <li>
					    <%= link_to book_favorite_path(@book), method: :post do %>
					      <i class="fa fa-heart" aria-hidden="true"></i>
					      <%= @book.favorites.count %> いいね
					    <% end %>
					  </li>
					<% end %>
				</td>
				<td>コメント数:<%= @book_comments.count %></td>
				<td>
					<% if @book.user == current_user %>
					  <%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
					<% end %>
			    </td>
				<td>
					<% if @book.user == current_user %>
					  <%= link_to "Destroy",book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					<% end %>
			    </td>
			</tr>
			<% @book_comments.each do |book_comment| %>
			<tr>
				<td><%=attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %></td>
				<td><%= book_comment.user.name %></td>
				<td><%= book_comment.comment %></td>
				<td>
					<% if book_comment.user == current_user %>
					  <%= link_to "Destroy", book_book_comment_path(book_comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					<% end %>
			    </td>
			</tr>
			</tr>
			<% end %>
		</table>
        <%= form_for [@book,@book_comment] do |f| %>
          	<%= f.text_area :comment, size: "90x10" %>
          	<br>
          	<%= f.submit "コメントする", class: "btn btn-info" %>
        <% end %>
	</div>
</div>

