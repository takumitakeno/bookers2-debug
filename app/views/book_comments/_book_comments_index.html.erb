<table class="table">
  <% book_comments.each do |book_comment| %>
	<tr>
		<td><%=attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %></td>
		<td><%= book_comment.user.name %></td>
		<td><%= book_comment.comment %></td>
		<td>
			<% if book_comment.user == current_user %>
			  <%= link_to "Destroy", book_book_comment_path(book_id: @book.id, id: book_comment.id), method: :delete, remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
			<% end %>
	    </td>
	</tr>
  <% end %>
</table>